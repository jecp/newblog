extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post",role="form")
        .form-group
          label.col-sm-2.control-label 标题
          .col-sm-8
            input.form-control(type="text",name="title",value="#{post.title}",disabled="disabled")
        .form-group
          label.col-sm-2.control-label 标签
          .col-sm-2
            input.form-control(type="text",name="tag1",value="#{post.tags[0]}",disabled="disabled")
          .col-sm-2
            input.form-control(type="text",name="tag2",value="#{post.tags[1]}",disabled="disabled")
          .col-sm-2
            input.form-control(type="text",name="tag3",value="#{post.tags[2]}",disabled="disabled")
          .col-sm-2
            input.form-control(type="text",name="tag3",value="#{post.tags[3]}",disabled="disabled")
          .row
        .form-group
          label.col-sm-2.control-label 正文
          .col-sm-8
            textarea.form-control(type="text", name="post[]") #{post.post}
        .form-group
          .col-sm-5.col-sm-offset-2
            button.btn.btn-default(type="submit") 保存修改
  .span(style="padding-bottom:100px;") 